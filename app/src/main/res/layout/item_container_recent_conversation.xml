<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FDE6DF"
    android:paddingTop="@dimen/_5sdp"
    android:layout_margin="@dimen/_13sdp"
    android:id="@+id/recentConversationsLayout"
    >

    <ImageView
        android:id="@+id/userProRecent"
        android:layout_width="@dimen/_35ssp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/profilepicshape"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/viewSupporter"
        android:layout_width="2dp"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="@id/userProRecent"
        app:layout_constraintStart_toStartOf="@id/userProRecent"
        app:layout_constraintTop_toTopOf="@id/userProRecent" />

    <TextView
        android:id="@+id/textNameRecent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toTopOf="@id/viewSupporter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/userProRecent"
        />

    <TextView
        android:id="@+id/textRecentMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/userProRecent"
        app:layout_constraintTop_toBottomOf="@id/viewSupporter"
        />

</androidx.constraintlayout.widget.ConstraintLayout>